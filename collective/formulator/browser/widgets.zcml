<configure xmlns="http://namespaces.zope.org/zope"
           xmlns:browser="http://namespaces.zope.org/browser"
           xmlns:z3c="http://namespaces.zope.org/z3c"
           xmlns:zcml="http://namespaces.zope.org/zcml"
           i18n_domain="collective.formulator">
    <adapter
        factory="z3c.form.browser.checkbox.SingleCheckBoxFieldWidget"
        for="collective.formulator.interfaces.IAction
             collective.formulator.interfaces.IActionEditForm"
        />
    <include package="z3c.form" file="meta.zcml" />
    <z3c:widgetTemplate
        for="collective.formulator.interfaces.IFormulatorActionsContext"
        mode="input"
        widget="z3c.form.interfaces.ICheckBoxWidget"
        layer="z3c.form.interfaces.IFormLayer"
        template="action_input.pt"
        />
    <class class=".widgets.LabelWidget">
        <require
            permission="zope.Public"
            interface="collective.formulator.interfaces.ILabelWidget"
            />
    </class>
    <adapter
        factory=".widgets.LabelFieldWidget"
        for="collective.formulator.interfaces.ILabel
             *"
        />
    <class class=".widgets.RichLabelWidget">
        <require
            permission="zope.Public"
            interface="collective.formulator.interfaces.IRichLabelWidget"
            />
    </class>
    <adapter
        factory=".widgets.RichLabelFieldWidget"
        for="collective.formulator.interfaces.IRichLabel
             *"
        />
    <z3c:widgetTemplate
        mode="display"
        widget="collective.formulator.interfaces.ILabelWidget"
        layer="z3c.form.interfaces.IFormLayer"
        template="empty.pt"
        />
    <z3c:widgetTemplate
        mode="input"
        widget="collective.formulator.interfaces.ILabelWidget"
        layer="z3c.form.interfaces.IFormLayer"
        template="empty.pt"
        />
    <z3c:widgetTemplate
        mode="hidden"
        widget="collective.formulator.interfaces.ILabelWidget"
        layer="z3c.form.interfaces.IFormLayer"
        template="empty.pt"
        />
    <browser:page
        name="ploneform-render-widget"
        for="collective.formulator.interfaces.ILabelWidget"
        layer="z3c.form.interfaces.IFormLayer"
        class=".widgets.LabelRenderWidget"
        permission="zope.Public"
        />
    <browser:page
        name="ploneform-render-widget"
        for="collective.formulator.interfaces.IRichLabelWidget"
        layer="z3c.form.interfaces.IFormLayer"
        class=".widgets.RichLabelRenderWidget"
        permission="zope.Public"
        />
    <configure
        zcml:condition="installed plone.formwidget.recaptcha">
    <adapter
        factory="plone.formwidget.recaptcha.widget.ReCaptchaFieldWidget"
        provides="z3c.form.interfaces.IFieldWidget"
        for="collective.formulator.interfaces.IReCaptcha
             *"
        />
    </configure>
</configure>
